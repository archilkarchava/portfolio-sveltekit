{
	"name": "portfolio-sveltekit",
	"version": "0.0.1",
	"scripts": {
		"dev": "concurrently \"svelte-kit dev\" \"npm run types:generate --watch\"",
		"build": "svelte-kit build",
		"preview": "svelte-kit preview",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --no-error-on-unmatched-pattern --write ./src/**/*.{svelte,ts,js} ./*.{ts,js}",
		"lint": "eslint ./src/**/*.{svelte,ts,js} --ignore-path .gitignore .",
		"lint:fix": "eslint --fix ./src/**/*.{svelte,ts,js} --ignore-path .gitignore .",
		"types:generate": "cross-env DOTENV_CONFIG_PATH='./.env.local' graphql-codegen --require dotenv/config"
	},
	"devDependencies": {
		"@graphql-codegen/cli": "^2.2.1",
		"@graphql-codegen/schema-ast": "^2.2.0",
		"@graphql-codegen/typescript": "^2.2.4",
		"@graphql-codegen/typescript-operations": "^2.1.8",
		"@sveltejs/adapter-netlify": "next",
		"@sveltejs/adapter-node": "next",
		"@sveltejs/adapter-static": "next",
		"@sveltejs/kit": "next",
		"@typescript-eslint/eslint-plugin": "^5.1.0",
		"@typescript-eslint/parser": "^5.1.0",
		"autoprefixer": "^10.3.7",
		"concurrently": "^6.3.0",
		"cross-env": "^7.0.3",
		"cssnano": "^5.0.8",
		"eslint": "^8.0.1",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-svelte3": "^3.2.1",
		"postcss": "^8.3.11",
		"postcss-load-config": "^3.1.0",
		"prettier": "^2.4.1",
		"prettier-plugin-svelte": "^2.4.0",
		"svelte": "^3.44.0",
		"svelte-check": "^2.2.7",
		"svelte-preprocess": "^4.9.8",
		"tailwindcss": "^2.2.17",
		"tslib": "^2.3.1",
		"typescript": "^4.4.4"
	},
	"type": "module",
	"dependencies": {
		"@urql/core": "^2.3.3",
		"graphql": "^15.6.1",
		"xss": "^1.0.10"
	}
}
